{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "shell",
            "label": "Build OpenGL Application",
            "command": "make clean; make; cd bin;./App",
            "windows": {
                "command": "cd /d/Projects/OpenGL-Tutorial-TheCherno && make clean && make && cd bin && ./App.exe",
            },
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build OpenGL Application (Debug)",
            "command": "make clean; make DEBUG=1",
            "args": [
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "none"
        }
    ]
}